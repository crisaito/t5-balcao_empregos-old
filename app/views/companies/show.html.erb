<h1><%= @company.name %></h1>
  
  <% if @company.logo.attached? %>
    <%= image_tag @company.logo %> 
  <% end %>
    
  <p> Descrição </p>
  <p> <%= @company.description %> </p>
  <p> Endereço </p>
  <p> <%= @company.address %> </p>
  <p> CNPJ </p>
  <p> <%= @company.cnpj %> </p>
  <p> site </p>
  <p> <%= @company.site %> </p>
  <p> linkedin </p>
  <p> <%= @company.linkedin %> </p>

  <p>Vagas Disponíveis</p>

<div>
  <% @jobs.each do |job| %>
    <h3> <%= link_to job.title, job_path(job.id) %> </h3>
    <p> <%= job.experience_level %> </p>
    <p> <%= job.compensation %> </p>
  <% end %>
</div>

<%= link_to 'Voltar', companies_path %> 